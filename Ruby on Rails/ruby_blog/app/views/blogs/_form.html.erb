<section class="vh-150  py-5 " >
    <div class="container py-5 h-100 " >
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-lg-9 col-xl-9">
                <div class="card rounded-3 ">
                    <div class="card-body p-4 ">
                        <h1 class="text-center my-3 pb-3">Create a New Blog Post</h1>
                            <%= form_for @blog do |f| %>
                                <div class="mb-3">
                                    
                                    <label for="title" class="form-label">Blog Title</label>
                                    <%= f.text_field :title, class: "form-control" %>                                                   
                                </div>
                                <div class="mb-3 field">
                                    <label for="content" class="form-label">Blog Content</label>
                                    <%= f.rich_text_area :content, class: "form-control", rows: "60" %>
                                </div>
                                <div class="form-group"> 
                                    <label for="categories" class="form-label">Categories</label>                                        
                                    <%= f.select :category_id,  Category.all.map { |c| [c.category, c.id]}, include_blank: true %>                                                                                                                     
                                </div>
                                <div>
                                    <%= f.submit  %>
                                </div>                                
                            <%end%>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

    


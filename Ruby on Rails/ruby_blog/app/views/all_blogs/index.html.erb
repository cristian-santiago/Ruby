<section class="vh-150  py-5 " >
  <div class="container py-5 h-100 " >
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-lg-9 col-xl-9">
        <div class="card">
          <div class="card-body p-4 ">
            <h1 class="text-center my-3 pb-3">Ruby GO</h1>               
                
                <h2 > All Categories</h2>                
                <hr class="separator">
                
                <div >                
                  <% @categories.map do |cat| %>
                    <%= link_to cat.category.to_s, blogs_path(:cate => cat.id), class: "link variant" %>
                  <%end%>
                </div>   

                  <h2> Posts </h2>
                  <hr class="separator">

                <% @blogs.order("blogs.created_at DESC").map do |blog|%>
                    <article class= "blog-card">
                        <h3 ><%= link_to blog.title, blog_path(blog.id), class: "link-title" %> </h3>
                          <p > <%= link_to blog.category.category, blogs_path(:cate => blog.category.id), class: "link btn btn-outline-secondary " %></p>  
                          <div class="align-img-name">
                              <%= image_tag("me.jpg", class: "creator-img") %>
                              <h6 class="name"><%= blog.user.username.capitalize %></h6>
                            </div>
                            <p><%= blog.created_at.strftime("%d %b, %Y")%></p>                        
                          <p> <%= link_to blog.description.to_s, blog_path(blog.id), class: "link-description"%> </p> 
                          <!-- 
                          <h5 > <%= link_to truncate(sanitize(blog.content.to_s, tags: []), length: 200) , blog_path(blog.id), class: "link-content"%></h5> 
                          -->
                    </article> 
                <%end%>                                
          </div>  
        </div>
      </div>
    </div>
  </div>
  
</section>  
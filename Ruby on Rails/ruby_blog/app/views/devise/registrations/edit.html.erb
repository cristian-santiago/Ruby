<section class="h-100 gradient-form" style="background-color: #eee;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-xl-10">
        <div class="card rounded-3 text-black">
          <div class="row g-0">
            <div class="col-lg-6">
              <div class="card-body p-md-5 mx-md-4">

                <div class="text-center ">
                  <%= image_tag("ruby.png", style: "width: 61px")%>
                  <h5 class="mt-1 mb-5 pb-1">Ruby Go</h5>
                </div>

                
                  <p>Edit your account</p>  
                  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                    <%= render "devise/shared/error_messages", resource: resource %>

                      <div class="form-floating mb-3">                        
                        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email", class: "form-control" %>
                        <%= f.label :email %>
                      </div>

                      <p><% if @minimum_password_length %>
                        <em>(minimum <%= @minimum_password_length %> characters)</em>
                        <% end %>
                      </p>
                      <div class="form-floating mb-3">
                        
                        <%= f.password_field :password, autocomplete: "new-password", placeholder: "new-password", class: "form-control"%>
                       
                        <%= f.label :password, "New Password" %> 
                      </div>

                      <div class="form-floating mb-3">
                        
                        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "new-password", class: "form-control"  %>
                        <%= f.label :password_confirmation %>
                      </div>

                      <div class="form-floating">
                        
                        <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "current-password", class: "form-control" %>
                        <%= f.label :current_password , "Current Password" %> 
                        <i>(we need your current password to confirm your changes)</i>
                      </div>

                      <div >
                        <%= f.submit "Update", class: "btn btn-primary col-12 mx-auto  gradient-custom-2 mb-3 btn-margin" %>
                      </div>
                  <% end %>                  
                <div class="text-center">
                  <p class= "text-center">Unhappy? &#128546; </p> 
                  <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-outline-danger" %>
                </div>
                <div class= "arrow-4">
                </div>
                  <%= link_to "Back", root_path %>
              

                  
              </div>
            </div>
            <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
              <div class="text-white px-3 py-4 p-md-5 mx-md-4 ">
                <div >
                  <%= image_tag("me.jpg", class: "profilePictureExample ")%>
                </div >
                <h4 class="mb-4">Change your profile picture</h4>
               
                  
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

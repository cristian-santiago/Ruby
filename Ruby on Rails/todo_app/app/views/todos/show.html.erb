<section class="vh-150">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-lg-9 col-xl-9">
        <div class="card rounded-3">
          <div class="card-body p-4">
            <h4 class="text-center my-3 pb-3"> <%= @todo.name %> </h4>
              <%= form_for @task do |f| %>
                <div>
                  <form class="row row-cols-lg-auto g-3 justify-content-center align-items-center mb-4 pb-2">
                    <div class="col-12">
                      <div class="form-outline">
                        <p><%= f.text_field :title, maxlength: 200, required: true, placeholder: "Create tasks here", class: "form-control" %></p>
                          <%= f.hidden_field :todo_id, :value => @todo.id %>
                      </div>
                    </div>
                    <div>
                        <%= button_to "Create Task", @task, method: :new, class: "btn btn-success " %>                                
                        <button class="btn btn-secondary button-back"><%= link_to "Back Todo", todos_path, required: false, class: "link" %></button>                         
                        <p style="color: green"><%= notice %></p>         
                    </div>
                  </form>  
                </div>
              <%end%>
            <table class="table mb-1 ">
              <thead>
                <tr>                    
                  <th scope="col">Todo item</th>                  
                  <th scope="col">Actions</th>
                </tr>
              </thead>             
              <tbody>
                <% @tasks.each do |task| %> 
                  <tr>
                      <th scope = "row" class="break-line vertical-middle-txt">
                        <p class="margin-p"><%= task.title %></p>
                      </th>
                      <td class="vertical-middle-btn">
                        <%= button_to "Delete", task, method: :delete, class: "btn btn-danger button" %>
                      </td>                
                  </tr>
                <% end %>                  
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
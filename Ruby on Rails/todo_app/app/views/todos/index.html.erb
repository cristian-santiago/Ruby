<section class="vh-150">
  <div class="container py-5 h-100" id="container">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-lg-9 col-xl-9">
        <div class="card rounded-3">
          <div class="card-body p-4">
            <h4 class="text-center my-3 pb-3">To Do App</h4>
              <%= form_with(model: @todo) do |form| %>
                <div>
                  <form class="row row-cols-lg-auto g-3 justify-content-center align-items-center mb-4 pb-2">
                    <div class="col-12">                        
                      <div class="form-outline">                                                      
                        <p><%= form.text_field :name, maxlength: 45, required: true, placeholder:"Create a main task here", class: "form-control"%></p>                                                      
                      </div>
                    </div>
                    <div >
                      <%= button_to "Create", @todo, method: :new, class: "btn btn-success " %> 
                      <p style="color: green"><%= notice %></p>         
                    </div>
                    <div class="form-outline mb-4">                        
                      <%= form_tag(@todos_paths, method: :get) do %>
                        <p><%= text_field_tag(:search, params[:search], placeholder: "Search for a main task here.", class: "form-control") %></p>
                        <%= submit_tag("Search",  class: "btn btn-primary")%>
                      <%end%>
                    </div>
                  </form>  
                </div>
              <% end %>                                
            <table class="table mb-1">
              <thead>
                <tr>                  
                  <th scope="col">Todo item</th>                    
                  <th scope="col" class="actions" >Actions</th>
                </tr>
              </thead>
              <tbody>                  
                  <% @todos.each do |todo| %>
                    <tr>                        
                      <th scope="row" class="vertical-middle-txt">
                        <p class="margin-p"><%= link_to todo.name, todo, class: "todo-link" %></p>
                      </th>                         
                      <td class="button-inline-delete" >                        
                          <%= button_to "Delete", todo, method: :delete, class: "btn btn-danger " %> 
                      </td>  
                      <td  class="button-inline-edit">                                            
                          <button class="btn btn-warning"><%= link_to "Edit", edit_todo_path(todo), class: "link" %></button>                       
                        
                      <td>
                    </tr>
                  <%end%>                
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>